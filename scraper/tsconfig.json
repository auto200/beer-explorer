{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "lib": [
      "ES2021",
    ],
    "allowJs": false,
    "outDir": "build",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "../",
    "paths": {
      "@shared/*": [
        "shared/*"
      ],
      "@utils": [
        "scraper/src/utils"
      ]
    }
  }
}